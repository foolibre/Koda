{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Build Style Schema",
  "description": "Personality and preferences for a build mode",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Style identifier"
    },
    "description": {
      "type": "string",
      "description": "What this style represents"
    },
    "tagline": {
      "type": "string",
      "description": "Short motto"
    },
    "preferences": {
      "type": "object",
      "properties": {
        "buildTempo": {
          "type": "string",
          "enum": ["fast", "balanced", "meticulous"],
          "description": "Speed vs thoroughness trade-off"
        },
        "testing": {
          "type": "string",
          "enum": ["minimal", "essential", "full", "rigorous"],
          "description": "Test coverage level"
        },
        "docs": {
          "type": "string",
          "enum": ["minimal", "medium", "high", "very high"],
          "description": "Documentation density"
        },
        "security": {
          "type": "string",
          "enum": ["basic", "high", "paranoid"],
          "description": "Security posture"
        },
        "codeStyle": {
          "type": "string",
          "enum": ["pragmatic", "elegant", "experimental", "strict"],
          "description": "Code aesthetics and philosophy"
        }
      }
    },
    "defaultStack": {
      "type": "object",
      "properties": {
        "frontend": {
          "type": "string"
        },
        "backend": {
          "type": "string"
        },
        "database": {
          "type": "string"
        }
      }
    },
    "toolchain": {
      "type": "object",
      "properties": {
        "packageManager": {
          "type": "string",
          "enum": ["npm", "pnpm", "yarn", "bun"]
        },
        "testRunner": {
          "type": "string"
        },
        "linter": {
          "type": "string"
        },
        "formatter": {
          "type": "string"
        }
      }
    }
  },
  "required": ["name", "description", "preferences", "defaultStack"]
}
