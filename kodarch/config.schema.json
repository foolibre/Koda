{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KodArch Configuration Schema",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "KodArch configuration version"
    },
    "workspace": {
      "type": "string",
      "description": "Root workspace directory for builds"
    },
    "defaultStyle": {
      "type": "string",
      "description": "Default build style to use",
      "default": "hyperforge"
    },
    "artifact": {
      "type": "object",
      "properties": {
        "outputDir": {
          "type": "string",
          "default": "./artifacts"
        },
        "includeChecksum": {
          "type": "boolean",
          "default": true
        },
        "compression": {
          "type": "string",
          "enum": ["zip", "tar.gz"],
          "default": "zip"
        }
      }
    },
    "security": {
      "type": "object",
      "properties": {
        "scanSecrets": {
          "type": "boolean",
          "default": true
        },
        "sanitizeEnv": {
          "type": "boolean",
          "default": true
        }
      }
    }
  },
  "required": ["version", "workspace"]
}
